@{
    ViewBag.Title = "Logueo";
}

<html>
<head>
    <link rel="stylesheet" type="text/css" href="/Content/Css/LoginForm.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
</head>
<body id="LoginForm">
    <div class="container">
        <h1 class="form-heading">login Form</h1>
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h2>Inicio de sesión de administrador</h2>
                    <p>Por favor, ingresa tu correo electrónico y contraseña</p>
                </div>
                <form id="Login">

                    <div class="form-group">


                        <input type="email" class="form-control" id="inputEmail" placeholder="Correo Electronico">

                    </div>

                    <div class="form-group">

                        <input type="password" class="form-control" id="inputPassword" placeholder="Contraseña">

                    </div>
                    <div class="forgot">
                        <a href="#">Olvidaste tu contraseña?</a>
                        <a href="/Account/Register">Registrarse</a>
                    </div>                    
                    <button type="submit" class="btn btn-primary">Iniciar Sesion</button>

                </form>
            </div>
            <p class="botto-text"> Designed by Sunil Rajput</p>
        </div>
    </div></div>


</body>
</html>
